{
  "name": "clark-gateway",
  "version": "3.2.1",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "nodemon",
    "serve": "node -r ts-node/register ./src/app.ts",
    "serve:debug": "node --inspect=5858 -r ts-node/register ./src/app.ts",
    "serve:prod": "node dist/app.js",
    "build": "tsc",
    "lint": "node_modules/.bin/tslint --project ./src/**",
    "pack": "npm run build && cp ./package.json ./dist && cd ./dist && zip -r ../dist.zip  ./* & cd ..",
    "zip": "cp ./package.json ./dist && cd ./dist && zip -r ../dist.zip  ./* & cd ..",
    "deploy": "eb deploy CLARK-Gateway-Production --label CLARK-Gateway-v$(node -p \"require('./package.json').version\")"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.0.39",
    "@types/express-http-proxy": "^1.5.2",
    "@types/express-jwt": "6.0.1",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.17.55",
    "@types/raven": "^2.1.3",
    "@types/socket.io": "^2.1.13",
    "@types/swagger-jsdoc": "^6.0.0",
    "ts-node": "^9.1.1",
    "tslint": "^5.7.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@sentry/node": "^5.11.2",
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.15.2",
    "express-http-proxy": "^1.1.0",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0",
    "nodemon": "^2.0.7",
    "raven": "^2.3.0",
    "socket.io": "^4.0.0",
    "swagger-jsdoc": "^3.5.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
